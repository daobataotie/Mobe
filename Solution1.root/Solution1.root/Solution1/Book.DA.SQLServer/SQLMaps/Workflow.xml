<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="Workflow" xmlns="http://ibatis.apache.org/mapping" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <statements>
  <select id="has_rows_table" resultClass="bool">
    select case when exists(
    SELECT
    *
    FROM
    [dbo].[Workflow]
    WHERE
    [TablesID]= #value#
    ) then 1 else 0 end
  </select>

    <select id="select_by_tableid" resultMap="WorkflowResult" parameterClass="string">
      SELECT
      *
      FROM
      [dbo].[Workflow]
      WHERE
      [TablesID]= #value#
    </select>
    
  </statements>
</sqlMap>