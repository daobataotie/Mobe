<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="TableManage" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="TableManage" type="Book.Model.TableManage, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="TableManageResult" class="TableManage">
			<result property="TableID" column="TableID" />
			<result property="TableName" column="TableName" />
			<result property="DBtablename" column="DBtablename" />
			<result property="Tabledescription" column="Tabledescription" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[TableManage]
				WHERE
				[TableID] = #TableID#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[TableManage]
 								
				) then 1 else 0 end
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="TableManageResult" parameterClass="TableManage">
			SELECT
				[TableID],
				[TableName],
				[DBtablename],
				[Tabledescription]
			FROM
				[dbo].[TableManage]
			WHERE
				[TableID] = #TableID#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[TableManage]
			WHERE
				[TableID] = #TableID#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="TableManageResult" >
			SELECT *
			FROM 
				[dbo].[TableManage]
			ORDER BY TableID ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[TableManage]
		</select>
		
		<select id="select_all_with_paging" resultMap="TableManageResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[TableManage]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="TableManage">
			INSERT INTO [dbo].[TableManage] 
			(
				[TableID],
				[TableName],
				[DBtablename],
				[Tabledescription]
			) 
			VALUES 
			(
				#TableID#,
				#TableName#,
				#DBtablename#,
				#Tabledescription#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="TableManage">
			UPDATE [TableManage] SET
				[TableName] = #TableName#,
				[DBtablename] = #DBtablename#,
				[Tabledescription] = #Tabledescription#
			WHERE
				[TableID] = #TableID#
        </update>
		
		
    </statements>
</sqlMap>

