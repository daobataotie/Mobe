<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="wfrecord" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="wfrecord" type="Book.Model.wfrecord, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="wfrecordResult" class="wfrecord">
			<result property="wfrecordId" column="wfrecordId" />
			<result property="WorkflowId" column="WorkflowId" />
			<result property="InsertTime" column="InsertTime" />
			<result property="UpdateTime" column="UpdateTime" />
			<result property="applyuserid" column="applyuserid" />
			<result property="firsttime" column="firsttime" />
			<result property="allovertime" column="allovertime" />
			<result property="allstate" column="allstate" />
			<result property="dealsign" column="dealsign" />
			<result property="wfrecordname" column="wfrecordname" />
			<result property="nowprocessid" column="nowprocessid" />
		<result property="Workflow" column="WorkflowId" lazyLoad="false" select="Workflow.select_by_primary_key" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[wfrecord]
				WHERE
				[wfrecordId] = #wfrecordId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[wfrecord]
 								
				) then 1 else 0 end
		</select>
		<select id="get_first" resultMap="wfrecordResult">
			<![CDATA[
			select top 1 *
			from dbo.wfrecord 
			order by InsertTime
			]]>
		</select>
		<select id="get_last" resultMap="wfrecordResult">
			<![CDATA[
			select top 1 *
			from dbo.wfrecord 			
			order by InsertTime desc
			]]>
		</select>
		<select id="get_prev" resultMap="wfrecordResult" parameterClass="wfrecord">
			<![CDATA[
			select top 1 *
			from dbo.wfrecord
			where InsertTime < #InsertTime#
			order by InsertTime desc
			]]>
		</select>
		<select id="get_next" resultMap="wfrecordResult" parameterClass="wfrecord">
			<![CDATA[
			select top 1 *
			from dbo.wfrecord
			where InsertTime > #InsertTime#
			order by InsertTime
			]]>
		</select>
		<select id="has_rows_before" resultClass="bool" parameterClass="wfrecord">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.wfrecord
				where InsertTime < #InsertTime#
				) 
				then 1 else 0 end
			]]>
		</select>
		
		<select id="has_rows_after" resultClass="bool" parameterClass="wfrecord">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.wfrecord
				where InsertTime > #InsertTime#
				) then 1 else 0 end
			]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="wfrecordResult" parameterClass="wfrecord">
			SELECT
				[wfrecordId],
				[WorkflowId],
				[InsertTime],
				[UpdateTime],
				[applyuserid],
				[firsttime],
				[allovertime],
				[allstate],
				[dealsign],
				[wfrecordname],
				[nowprocessid]
			FROM
				[dbo].[wfrecord]
			WHERE
				[wfrecordId] = #wfrecordId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[wfrecord]
			WHERE
				[wfrecordId] = #wfrecordId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="wfrecordResult" >
			SELECT *
			FROM 
				[dbo].[wfrecord]
			ORDER BY wfrecordId ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[wfrecord]
		</select>
		
		<select id="select_all_with_paging" resultMap="wfrecordResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[wfrecord]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="wfrecord">
			INSERT INTO [dbo].[wfrecord] 
			(
				[wfrecordId],
				[WorkflowId],
				[InsertTime],
				[UpdateTime],
				[applyuserid],
				[firsttime],
				[allovertime],
				[allstate],
				[dealsign],
				[wfrecordname],
				[nowprocessid]
			) 
			VALUES 
			(
				#wfrecordId#,
				#WorkflowId#,
				#InsertTime#,
				#UpdateTime#,
				#applyuserid#,
				#firsttime#,
				#allovertime#,
				#allstate#,
				#dealsign#,
				#wfrecordname#,
				#nowprocessid#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="wfrecord">
			UPDATE [wfrecord] SET
				[WorkflowId] = #WorkflowId#,
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[applyuserid] = #applyuserid#,
				[firsttime] = #firsttime#,
				[allovertime] = #allovertime#,
				[allstate] = #allstate#,
				[dealsign] = #dealsign#,
				[wfrecordname] = #wfrecordname#,
				[nowprocessid] = #nowprocessid#
			WHERE
				[wfrecordId] = #wfrecordId#
        </update>
		
		
    </statements>
</sqlMap>

