<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="XP2" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="XP2" type="Book.Model.XP2, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="XP2Result" class="XP2">
			<result property="XP2Id" column="XP2Id" />
			<result property="InvoiceXTId" column="InvoiceXTId" />
			<result property="InvoiceFKId" column="InvoiceFKId" />
			<result property="XP2Money" column="XP2Money" />
			<result property="InvoiceFK" column="InvoiceFKId" lazyLoad="false" select="InvoiceFK.select_by_primary_key" />
			<result property="InvoiceXT" column="InvoiceXTId" lazyLoad="false" select="InvoiceXT.select_by_primary_key" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[XP2]
				WHERE
				[XP2Id] = #XP2Id#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[XP2]
 								
				) then 1 else 0 end
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="XP2Result" parameterClass="XP2">
			SELECT
				[XP2Id],
				[InvoiceXTId],
				[InvoiceFKId],
				[XP2Money]
			FROM
				[dbo].[XP2]
			WHERE
				[XP2Id] = #XP2Id#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[XP2]
			WHERE
				[XP2Id] = #XP2Id#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="XP2Result" >
			SELECT *
			FROM 
				[dbo].[XP2]
			ORDER BY XP2Id ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[XP2]
		</select>
		
		<select id="select_all_with_paging" resultMap="XP2Result">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[XP2]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="XP2">
			INSERT INTO [dbo].[XP2] 
			(
				[XP2Id],
				[InvoiceXTId],
				[InvoiceFKId],
				[XP2Money]
			) 
			VALUES 
			(
				#XP2Id#,
				#InvoiceXTId#,
				#InvoiceFKId#,
				#XP2Money#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="XP2">
			UPDATE [XP2] SET
				[InvoiceXTId] = #InvoiceXTId#,
				[InvoiceFKId] = #InvoiceFKId#,
				[XP2Money] = #XP2Money#
			WHERE
				[XP2Id] = #XP2Id#
        </update>
		
		
    </statements>
</sqlMap>

