<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="InvoiceFT" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="InvoiceFT" type="Book.Model.InvoiceFT, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="InvoiceFTResult" class="InvoiceFT">
			<result property="InvoiceId" column="InvoiceId" />
			<result property="Account1Id" column="Account1Id" />
			<result property="Employee0Id" column="Employee0Id" />
			<result property="Employee1Id" column="Employee1Id" />
			<result property="Account2Id" column="Account2Id" />
			<result property="Employee2Id" column="Employee2Id" />
			<result property="Employee3Id" column="Employee3Id" />
			<result property="InvoiceLRTime" column="InvoiceLRTime" />
			<result property="InvoiceGZTime" column="InvoiceGZTime" />
			<result property="InvoiceZFTime" column="InvoiceZFTime" />
			<result property="InvoiceZFCause" column="InvoiceZFCause" />
			<result property="InvoiceDate" column="InvoiceDate" />
			<result property="InvoiceAbstract" column="InvoiceAbstract" />
			<result property="InvoiceNote" column="InvoiceNote" />
			<result property="InvoiceStatus" column="InvoiceStatus" />
			<result property="InsertTime" column="InsertTime" />
			<result property="UpdateTime" column="UpdateTime" />
			<result property="InvoiceTotal" column="InvoiceTotal" />
			<result property="Account2" column="Account2Id" lazyLoad="false" select="Account.select_by_primary_key" />
			<result property="Account1" column="Account1Id" lazyLoad="false" select="Account.select_by_primary_key" />
			<result property="Employee2" column="Employee2Id" lazyLoad="false" select="Employee.select_by_primary_key" />
			<result property="Employee0" column="Employee0Id" lazyLoad="false" select="Employee.select_by_primary_key" />
			<result property="Employee1" column="Employee1Id" lazyLoad="false" select="Employee.select_by_primary_key" />
			<result property="Employee3" column="Employee3Id" lazyLoad="false" select="Employee.select_by_primary_key" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[InvoiceFT]
				WHERE
				[InvoiceId] = #InvoiceId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[InvoiceFT]
 				where invoicestatus=1				
				) then 1 else 0 end
		</select>
		<select id="get_first" resultMap="InvoiceFTResult">
			<![CDATA[
			select top 1 *
			from dbo.InvoiceFT
			where invoicestatus=1
			order by InvoiceDate,inserttime
			]]>
		</select>
		<select id="get_last" resultMap="InvoiceFTResult">
			<![CDATA[
			select top 1 *
			from dbo.InvoiceFT
			where invoicestatus=1
			order by InvoiceDate desc,inserttime desc
			]]>
		</select>
		<select id="get_prev" resultMap="InvoiceFTResult" parameterClass="InvoiceFT">
			<![CDATA[
			select top 1 *
			from dbo.InvoiceFT
			where InvoiceDate < #InvoiceDate#
			order by InvoiceDate desc, inserttime desc
			]]>
		</select>
		<select id="get_next" resultMap="InvoiceFTResult" parameterClass="InvoiceFT">
			<![CDATA[
			select top 1 *
			from dbo.InvoiceFT
			where InvoiceDate > #InvoiceDate#
			order by InvoiceDate,inserttime
			]]>
		</select>
		
		<select id="has_rows_before" resultClass="bool" parameterClass="InvoiceFT">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.InvoiceFT
				where InvoiceDate < #InvoiceDate#
				) then 1 else 0 end
			]]>
		</select>
		
		<select id="has_rows_after" resultClass="bool" parameterClass="InvoiceFT">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.InvoiceFT
				where InvoiceDate > #InvoiceDate#
				) then 1 else 0 end
			]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="InvoiceFTResult" parameterClass="InvoiceFT">
			SELECT
				[InvoiceId],
				[Account1Id],
				[Employee0Id],
				[Employee1Id],
				[Account2Id],
				[Employee2Id],
				[Employee3Id],
				[InvoiceLRTime],
				[InvoiceGZTime],
				[InvoiceZFTime],
				[InvoiceZFCause],
				[InvoiceDate],
				[InvoiceAbstract],
				[InvoiceNote],
				[InvoiceStatus],
				[InsertTime],
				[UpdateTime],
				[InvoiceTotal]
			FROM
				[dbo].[InvoiceFT]
			WHERE
				[InvoiceId] = #InvoiceId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[InvoiceFT]
			WHERE
				[InvoiceId] = #InvoiceId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="InvoiceFTResult" >
			SELECT *
			FROM 
				[dbo].[InvoiceFT]
			ORDER BY InvoiceId ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[InvoiceFT]
		</select>
		
		<select id="select_all_with_paging" resultMap="InvoiceFTResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[InvoiceFT]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="InvoiceFT">
			INSERT INTO [dbo].[InvoiceFT] 
			(
				[InvoiceId],
				[Account1Id],
				[Employee0Id],
				[Employee1Id],
				[Account2Id],
				[Employee2Id],
				[Employee3Id],
				[InvoiceLRTime],
				[InvoiceGZTime],
				[InvoiceZFTime],
				[InvoiceZFCause],
				[InvoiceDate],
				[InvoiceAbstract],
				[InvoiceNote],
				[InvoiceStatus],
				[InsertTime],
				[UpdateTime],
				[InvoiceTotal]
			) 
			VALUES 
			(
				#InvoiceId#,
				#Account1Id#,
				#Employee0Id#,
				#Employee1Id#,
				#Account2Id#,
				#Employee2Id#,
				#Employee3Id#,
				#InvoiceLRTime#,
				#InvoiceGZTime#,
				#InvoiceZFTime#,
				#InvoiceZFCause#,
				#InvoiceDate#,
				#InvoiceAbstract#,
				#InvoiceNote#,
				#InvoiceStatus#,
				#InsertTime#,
				#UpdateTime#,
				#InvoiceTotal#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="InvoiceFT">
			UPDATE [InvoiceFT] SET
				[Account1Id] = #Account1Id#,
				[Employee0Id] = #Employee0Id#,
				[Employee1Id] = #Employee1Id#,
				[Account2Id] = #Account2Id#,
				[Employee2Id] = #Employee2Id#,
				[Employee3Id] = #Employee3Id#,
				[InvoiceLRTime] = #InvoiceLRTime#,
				[InvoiceGZTime] = #InvoiceGZTime#,
				[InvoiceZFTime] = #InvoiceZFTime#,
				[InvoiceZFCause] = #InvoiceZFCause#,
				[InvoiceDate] = #InvoiceDate#,
				[InvoiceAbstract] = #InvoiceAbstract#,
				[InvoiceNote] = #InvoiceNote#,
				[InvoiceStatus] = #InvoiceStatus#,
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[InvoiceTotal] = #InvoiceTotal#
			WHERE
				[InvoiceId] = #InvoiceId#
        </update>
		
		
    </statements>
</sqlMap>

