<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="Processing" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="Processing" type="Book.Model.Processing, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="ProcessingResult" class="Processing">
			<result property="ProcessId" column="ProcessId" />
			<result property="CustomerId" column="CustomerId" />
			<result property="ProcessCategoryId" column="ProcessCategoryId" />
			<result property="InsertTime" column="InsertTime" />
			<result property="UpdateTime" column="UpdateTime" />
			<result property="Content" column="Content" />
			<result property="Description" column="Description" />
			<result property="Customer" column="CustomerId" lazyLoad="false" select="Customer.select_by_primary_key" />
			<result property="ProcessCategory" column="ProcessCategoryId" lazyLoad="false" select="ProcessCategory.select_by_primary_key" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Processing]
				WHERE
				[ProcessId] = #ProcessId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Processing]
 								
				) then 1 else 0 end
		</select>
		<select id="get_first" resultMap="ProcessingResult">
			<![CDATA[
			select top 1 *
			from dbo.Processing 
			order by InsertTime
			]]>
		</select>
		<select id="get_last" resultMap="ProcessingResult">
			<![CDATA[
			select top 1 *
			from dbo.Processing 			
			order by InsertTime desc
			]]>
		</select>
		<select id="get_prev" resultMap="ProcessingResult" parameterClass="Processing">
			<![CDATA[
			select top 1 *
			from dbo.Processing
			where InsertTime < #InsertTime#
			order by InsertTime desc
			]]>
		</select>
		<select id="get_next" resultMap="ProcessingResult" parameterClass="Processing">
			<![CDATA[
			select top 1 *
			from dbo.Processing
			where InsertTime > #InsertTime#
			order by InsertTime
			]]>
		</select>
		<select id="has_rows_before" resultClass="bool" parameterClass="Processing">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Processing
				where InsertTime < #InsertTime#
				) 
				then 1 else 0 end
			]]>
		</select>
		
		<select id="has_rows_after" resultClass="bool" parameterClass="Processing">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Processing
				where InsertTime > #InsertTime#
				) then 1 else 0 end
			]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="ProcessingResult" parameterClass="Processing">
			SELECT
				[ProcessId],
				[CustomerId],
				[ProcessCategoryId],
				[InsertTime],
				[UpdateTime],
				[Content],
				[Description]
			FROM
				[dbo].[Processing]
			WHERE
				[ProcessId] = #ProcessId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[Processing]
			WHERE
				[ProcessId] = #ProcessId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="ProcessingResult" >
			SELECT *
			FROM 
				[dbo].[Processing]
			ORDER BY ProcessId ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[Processing]
		</select>
		
		<select id="select_all_with_paging" resultMap="ProcessingResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[Processing]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="Processing">
			INSERT INTO [dbo].[Processing] 
			(
				[ProcessId],
				[CustomerId],
				[ProcessCategoryId],
				[InsertTime],
				[UpdateTime],
				[Content],
				[Description]
			) 
			VALUES 
			(
				#ProcessId#,
				#CustomerId#,
				#ProcessCategoryId#,
				#InsertTime#,
				#UpdateTime#,
				#Content#,
				#Description#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="Processing">
			UPDATE [Processing] SET
				[CustomerId] = #CustomerId#,
				[ProcessCategoryId] = #ProcessCategoryId#,
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[Content] = #Content#,
				[Description] = #Description#
			WHERE
				[ProcessId] = #ProcessId#
        </update>
		
		
    </statements>
</sqlMap>

