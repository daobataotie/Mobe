<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="Workflow" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="Workflow" type="Book.Model.Workflow, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="WorkflowResult" class="Workflow">
			<result property="WorkflowId" column="WorkflowId" />
			<result property="TablesID" column="TablesID" />
			<result property="InsertTime" column="InsertTime" />
			<result property="UpdateTime" column="UpdateTime" />
			<result property="workflowname" column="workflowname" />
			<result property="description" column="description" />
			<result property="Id" column="Id" />
		<result property="Tables" column="TablesID" lazyLoad="false" select="Tables.select_by_primary_key" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Workflow]
				WHERE
				[WorkflowId] = #WorkflowId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Workflow]
 								
				) then 1 else 0 end
		</select>
		<select id="get_first" resultMap="WorkflowResult">
			<![CDATA[
			select top 1 *
			from dbo.Workflow 
			order by InsertTime
			]]>
		</select>
		<select id="get_last" resultMap="WorkflowResult">
			<![CDATA[
			select top 1 *
			from dbo.Workflow 			
			order by InsertTime desc
			]]>
		</select>
		<select id="get_prev" resultMap="WorkflowResult" parameterClass="Workflow">
			<![CDATA[
			select top 1 *
			from dbo.Workflow
			where InsertTime < #InsertTime#
			order by InsertTime desc
			]]>
		</select>
		<select id="get_next" resultMap="WorkflowResult" parameterClass="Workflow">
			<![CDATA[
			select top 1 *
			from dbo.Workflow
			where InsertTime > #InsertTime#
			order by InsertTime
			]]>
		</select>
		<select id="has_rows_before" resultClass="bool" parameterClass="Workflow">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Workflow
				where InsertTime < #InsertTime#
				) 
				then 1 else 0 end
			]]>
		</select>
		
		<select id="has_rows_after" resultClass="bool" parameterClass="Workflow">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Workflow
				where InsertTime > #InsertTime#
				) then 1 else 0 end
			]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="WorkflowResult" parameterClass="Workflow">
			SELECT
				[WorkflowId],
				[TablesID],
				[InsertTime],
				[UpdateTime],
				[workflowname],
				[description],
				[Id]
			FROM
				[dbo].[Workflow]
			WHERE
				[WorkflowId] = #WorkflowId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[Workflow]
			WHERE
				[WorkflowId] = #WorkflowId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="WorkflowResult" >
			SELECT *
			FROM 
				[dbo].[Workflow]
			
				
			ORDER BY Id ASC
			
			
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[Workflow]
		</select>
		
		<select id="select_all_with_paging" resultMap="WorkflowResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[Workflow]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="Workflow">
			INSERT INTO [dbo].[Workflow] 
			(
				[WorkflowId],
				[TablesID],
				[InsertTime],
				[UpdateTime],
				[workflowname],
				[description],
				[Id]
			) 
			VALUES 
			(
				#WorkflowId#,
				#TablesID#,
				#InsertTime#,
				#UpdateTime#,
				#workflowname#,
				#description#,
				#Id#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="Workflow">
			UPDATE [Workflow] SET
				[TablesID] = #TablesID#,
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[workflowname] = #workflowname#,
				[description] = #description#,
				[Id] = #Id#
			WHERE
				[WorkflowId] = #WorkflowId#
        </update>
		<select id="existsPrimary" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from [dbo].[Workflow]
				where  WorkflowId = #value# 
				)
				then 1 else 0 end
			]]>
		</select>
		<select id="exists" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Workflow
				where Id = #value#
				) then 1 else 0 end
			]]>
		</select>
		
		<select id="get_by_id" resultMap="WorkflowResult" parameterClass="string">
			<![CDATA[
			SELECT top 1
				*
			FROM
				[dbo].[Workflow]
			WHERE
				Id = #value#
			]]>	
        </select>
		
		<select id="existsexcept" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from dbo.Workflow
				where Id = #newId# and Id <> #oldId#
				)
				then 1 else 0 end
			]]>
		</select>		
		
		
    </statements>
</sqlMap>

