        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[BomPackageDetails]
				WHERE
				[BomPackageDetailsId] = #BomPackageDetailsId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[BomPackageDetails]
 								
				) then 1 else 0 end
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="BomPackageDetailsResult" parameterClass="BomPackageDetails">
			SELECT
				[BomPackageDetailsId],
				[BomId],
				[ProductId],
				[Quantity],
				[ConsumeRate],
				[EffectsDate],
				[ExpiringDate],
				[Description],
				[PackageUnit],
				[UseQuantity]
			FROM
				[dbo].[BomPackageDetails]
			WHERE
				[BomPackageDetailsId] = #BomPackageDetailsId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[BomPackageDetails]
			WHERE
				[BomPackageDetailsId] = #BomPackageDetailsId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="BomPackageDetailsResult" >
			SELECT *
			FROM 
				[dbo].[BomPackageDetails]
			
			
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[BomPackageDetails]
		</select>
		
		<select id="select_all_with_paging" resultMap="BomPackageDetailsResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[BomPackageDetails]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="BomPackageDetails">
			INSERT INTO [dbo].[BomPackageDetails] 
			(
				[BomPackageDetailsId],
				[BomId],
				[ProductId],
				[Quantity],
				[ConsumeRate],
				[EffectsDate],
				[ExpiringDate],
				[Description],
				[PackageUnit],
				[UseQuantity]
			) 
			VALUES 
			(
				#BomPackageDetailsId#,
				#BomId#,
				#ProductId#,
				#Quantity#,
				#ConsumeRate#,
				#EffectsDate#,
				#ExpiringDate#,
				#Description#,
				#PackageUnit#,
				#UseQuantity#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="BomPackageDetails">
			UPDATE [BomPackageDetails] SET
				[BomId] = #BomId#,
				[ProductId] = #ProductId#,
				[Quantity] = #Quantity#,
				[ConsumeRate] = #ConsumeRate#,
				[EffectsDate] = #EffectsDate#,
				[ExpiringDate] = #ExpiringDate#,
				[Description] = #Description#,
				[PackageUnit] = #PackageUnit#,
				[UseQuantity] = #UseQuantity#
			WHERE
				[BomPackageDetailsId] = #BomPackageDetailsId#
        </update>
		<select id="existsPrimary" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from [dbo].[BomPackageDetails]
				where  BomPackageDetailsId = #value# 
				)
				then 1 else 0 end
			]]>
		</select>
		
    </statements>
