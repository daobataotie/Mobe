<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="Tables" xmlns="http://ibatis.apache.org/mapping" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <statements>

    <select id="select_bytablename" resultMap="TablesResult" parameterClass="string">
      select * from Tables where Tablename = #value#
    </select>

    <select id="select_bytablecode" resultMap="TablesResult" parameterClass="string">
      select * from Tables where TableCode = #value#
    </select>
  </statements>
</sqlMap>