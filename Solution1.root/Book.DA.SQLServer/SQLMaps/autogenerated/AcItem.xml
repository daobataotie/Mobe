<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="AcItem" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="AcItem" type="Book.Model.AcItem, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="AcItemResult" class="AcItem">
			<result property="AcItemId" column="AcItemId" />
			<result property="Id" column="Id" />
			<result property="ItemType" column="ItemType" />
			<result property="ItemName" column="ItemName" />
			<result property="ItemDesc" column="ItemDesc" />
			<result property="AcItemDate" column="AcItemDate" />
			<result property="ItemPrice" column="ItemPrice" />
        </resultMap>
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			<![CDATA[select case when exists(
				SELECT
					*
				FROM
					[dbo].[AcItem]
				WHERE
				[AcItemId] = #AcItemId#
                        			                   
				) then 1 else 0 end
                ]]>
		</select>
		<select id="has_rows" resultClass="bool">
			<![CDATA[select case when exists(
				SELECT
					*
				FROM
					[dbo].[AcItem]
 								
				) then 1 else 0 end
                ]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="AcItemResult" parameterClass="AcItem">
			<![CDATA[SELECT
				[AcItemId],
				[Id],
				[ItemType],
				[ItemName],
				[ItemDesc],
				[AcItemDate],
				[ItemPrice]
			FROM
				[dbo].[AcItem]
			WHERE
				[AcItemId] = #AcItemId#
                			          
         		]]>
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
				<![CDATA[                
                DELETE FROM [dbo].[AcItem]
			WHERE            
				[AcItemId] = #AcItemId#
                    		]]>
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="AcItemResult" >
			<![CDATA[SELECT *
			FROM 
				[dbo].[AcItem]
                			                   
			ORDER BY Id ASC			
			
			]]>
        </select>
        
		<select id="count_all" resultClass="int">
		<![CDATA[	select count(*)
			from 
				[dbo].[AcItem]
                			          
         ]]>
		</select>
		
		<select id="select_all_with_paging" resultMap="AcItemResult">
        <![CDATA[    SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[AcItem]
                    			          
         
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
             ]]>
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="AcItem">
			 <![CDATA[ INSERT INTO [dbo].[AcItem] 
			(
				[AcItemId],
				[Id],
				[ItemType],
				[ItemName],
				[ItemDesc],
				[AcItemDate],
				[ItemPrice]
			) 
			VALUES 
			(
				#AcItemId#,
				#Id#,
				#ItemType#,
				#ItemName#,
				#ItemDesc#,
				#AcItemDate#,
				#ItemPrice#
			)
             ]]>
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="AcItem">
		 <![CDATA[ 	UPDATE [AcItem] SET
				[Id] = #Id#,
				[ItemType] = #ItemType#,
				[ItemName] = #ItemName#,
				[ItemDesc] = #ItemDesc#,
				[AcItemDate] = #AcItemDate#,
				[ItemPrice] = #ItemPrice#
			WHERE
				[AcItemId] = #AcItemId#
                    ]]>
        </update>
		<select id="existsPrimary" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from [dbo].[AcItem]
				where  AcItemId = #value#                 			                   
				)
				then 1 else 0 end
			]]>
		</select>
		<select id="exists" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.AcItem
				where Id = #value#
               			          
         
				) then 1 else 0 end
			]]>
		</select>
		
		<select id="get_by_id" resultMap="AcItemResult" parameterClass="string">
			<![CDATA[
			SELECT top 1
				*
			FROM
				[dbo].[AcItem]
                    			          
         
			WHERE
				Id = #value#
			]]>	
        </select>
		
		<select id="existsexcept" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from dbo.AcItem
				where Id = #newId# and Id <> #oldId#
                    			          
         
				)
				then 1 else 0 end
			]]>
		</select>		
		
		
    </statements>
</sqlMap>

