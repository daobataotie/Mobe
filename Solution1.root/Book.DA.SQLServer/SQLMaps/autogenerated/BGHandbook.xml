<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="BGHandbook" xmlns="http://ibatis.apache.org/mapping"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <alias>
    <typeAlias alias="BGHandbook" type="Book.Model.BGHandbook, Book.Model" />
  </alias>
  <resultMaps>
    <resultMap id="BGHandbookResult" class="BGHandbook">
      <result property="BGHandbookId" column="BGHandbookId" />
      <result property="EmployeeId" column="EmployeeId" />
      <result property="AuditEmpId" column="AuditEmpId" />
      <result property="InsertTime" column="InsertTime" />
      <result property="UpdateTime" column="UpdateTime" />
      <result property="BGHandbookDate" column="BGHandbookDate" />
      <result property="Id" column="Id" />
      <result property="Desc" column="Desc" />
      <result property="AuditState" column="AuditState" />
      <result property="YouXiaoDate" column="YouXiaoDate" />
      <result property ="IsEffect" column="IsEffect"/>
      <result property="AuditEmp" column="AuditEmpId" lazyLoad="false" select="Employee.select_SimpleEmployee" />
      <result property="Employee" column="EmployeeId" lazyLoad="false" select="Employee.select_SimpleEmployee" />
    </resultMap>
  </resultMaps>

  <statements>
    <select id="has_rows_of" resultClass="bool">
      <![CDATA[select case when exists(
				SELECT
					*
				FROM
					[dbo].[BGHandbook]
				WHERE
				[BGHandbookId] = #BGHandbookId#
                        			                   
				) then 1 else 0 end
                ]]>
    </select>
    <select id="has_rows" resultClass="bool">
      <![CDATA[select case when exists(
				SELECT
					*
				FROM
					[dbo].[BGHandbook]
 								
				) then 1 else 0 end
                ]]>
    </select>
    <select id="get_first" resultMap="BGHandbookResult">
      <![CDATA[
			select top 1 *
			from dbo.BGHandbook
			 
			order by InsertTime 
			]]>
    </select>
    <select id="get_last" resultMap="BGHandbookResult">
      <![CDATA[
			select top 1 *
			from dbo.BGHandbook
						
            order by InsertTime desc
			]]>

    </select>
    <select id="get_prev" resultMap="BGHandbookResult" parameterClass="BGHandbook">
      <![CDATA[
			select top 1 *
			from dbo.BGHandbook
			where InsertTime < #InsertTime#	
            			          
            order by InsertTime desc
			]]>
    </select>
    <select id="get_next" resultMap="BGHandbookResult" parameterClass="BGHandbook">
      <![CDATA[
			select top 1 *
			from dbo.BGHandbook
			where InsertTime > #InsertTime#	
                			                   
            order by InsertTime
			]]>
    </select>

    <select id="has_rows_before" resultClass="bool" parameterClass="BGHandbook">
      <![CDATA[
			select case when exists(
				select * 
				from dbo.BGHandbook
				where InsertTime < #InsertTime#
                			                   
				) then 1 else 0 end
			]]>
    </select>

    <select id="has_rows_after" resultClass="bool" parameterClass="BGHandbook">
      <![CDATA[
			select case when exists(
				select * 
				from dbo.BGHandbook
				where InsertTime > #InsertTime#
                			          
         
				) then 1 else 0 end
			]]>
    </select>
    <!-- select by primary key -->
    <select id="select_by_primary_key" resultMap="BGHandbookResult" parameterClass="BGHandbook">
      <![CDATA[SELECT
				[BGHandbookId],
				[EmployeeId],
				[AuditEmpId],
				[InsertTime],
				[UpdateTime],
				[BGHandbookDate],
				[Id],
				[Desc],
				[AuditState],
				[YouXiaoDate],
        [IsEffect]
			FROM
				[dbo].[BGHandbook]
			WHERE
				[BGHandbookId] = #BGHandbookId#
                			          
         		]]>
    </select>

    <!-- delete -->
    <delete id="delete" parameterClass="string">
      <![CDATA[                
                DELETE FROM [dbo].[BGHandbook]
			WHERE            
				[BGHandbookId] = #BGHandbookId#
                    		]]>
    </delete>

    <!-- select all -->
    <select id="select_all" resultMap="BGHandbookResult" >
      <![CDATA[SELECT *
			FROM 
				[dbo].[BGHandbook]
                			                   
			ORDER BY Id ASC			
			
			]]>
    </select>

    <select id="count_all" resultClass="int">
      <![CDATA[	select count(*)
			from 
				[dbo].[BGHandbook]
                			          
         ]]>
    </select>

    <select id="select_all_with_paging" resultMap="BGHandbookResult">
      <![CDATA[    SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[BGHandbook]
                    			          
         
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
             ]]>
    </select>

    <!-- insert -->
    <insert id="insert" parameterClass="BGHandbook">
      <![CDATA[ INSERT INTO [dbo].[BGHandbook] 
			(
				[BGHandbookId],
				[EmployeeId],
				[AuditEmpId],
				[InsertTime],
				[UpdateTime],
				[BGHandbookDate],
				[Id],
				[Desc],
				[AuditState],
				[YouXiaoDate],
        [IsEffect]
			) 
			VALUES 
			(
				#BGHandbookId#,
				#EmployeeId#,
				#AuditEmpId#,
				#InsertTime#,
				#UpdateTime#,
				#BGHandbookDate#,
				#Id#,
				#Desc#,
				#AuditState#,
				#YouXiaoDate#,
        #IsEffect#
			)
             ]]>
    </insert>

    <!-- update -->
    <update id="update" parameterClass="BGHandbook">
      <![CDATA[ 	UPDATE [BGHandbook] SET
				[EmployeeId] = #EmployeeId#,
				[AuditEmpId] = #AuditEmpId#,
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[BGHandbookDate] = #BGHandbookDate#,
				[Id] = #Id#,
				[Desc] = #Desc#,
				[AuditState] = #AuditState#,
				[YouXiaoDate] = #YouXiaoDate#,
        [IsEffect]=#IsEffect#
			WHERE
				[BGHandbookId] = #BGHandbookId#
                    ]]>
    </update>
    <select id="existsPrimary" resultClass="bool" parameterClass="string">
      <![CDATA[
			select case when exists(
				select *
				from [dbo].[BGHandbook]
				where  BGHandbookId = #value#                 			                   
				)
				then 1 else 0 end
			]]>
    </select>
    <select id="exists" resultClass="bool" parameterClass="string">
      <![CDATA[
			select case when exists(
				select * 
				from dbo.BGHandbook
				where Id = #value#
               			          
         
				) then 1 else 0 end
			]]>
    </select>

    <select id="get_by_id" resultMap="BGHandbookResult" parameterClass="string">
      <![CDATA[
			SELECT top 1
				*
			FROM
				[dbo].[BGHandbook]
                    			          
         
			WHERE
				Id = #value#
			]]>
    </select>

    <select id="existsexcept" resultClass="bool" parameterClass="string">
      <![CDATA[
			select case when exists(
				select *
				from dbo.BGHandbook
				where Id = #newId# and Id <> #oldId#
                    			          
         
				)
				then 1 else 0 end
			]]>
    </select>


  </statements>
</sqlMap>

