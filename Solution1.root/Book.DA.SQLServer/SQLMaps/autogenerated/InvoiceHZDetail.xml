				[ProductId],
				[InvoiceId],
				[InvoiceHZDetailPrice],
				[InvoiceHZDetailQuantity],
				[InvoiceHZDetailMoney],
				[InvoiceHZDetailNote],
				[InvoiceProductUnit]
			FROM
