<?xml version="1.0" encoding="utf-8" ?> 
<sqlMap namespace="Account" xmlns="http://ibatis.apache.org/mapping" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <alias>
        <typeAlias alias="Account" type="Book.Model.Account, Book.Model" />
    </alias>
    <resultMaps>                                    
        <resultMap id="AccountResult" class="Account">
			<result property="AccountId" column="AccountId" />
			<result property="InsertTime" column="InsertTime" />
			<result property="UpdateTime" column="UpdateTime" />
			<result property="Id" column="Id" />
			<result property="AccountName" column="AccountName" />
			<result property="AccountBalance0" column="AccountBalance0" />
			<result property="AccountBalance1" column="AccountBalance1" />
			<result property="AccountDescription" column="AccountDescription" />

        </resultMap>p
    </resultMaps>
		
    <statements>
		<select id="has_rows_of" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Account]
				WHERE
				[AccountId] = #AccountId#
				) then 1 else 0 end
		</select>
		<select id="has_rows" resultClass="bool">
			select case when exists(
				SELECT
					*
				FROM
					[dbo].[Account]
 								
				) then 1 else 0 end
		</select>
		<select id="get_first" resultMap="AccountResult">
			<![CDATA[
			select top 1 *
			from dbo.Account 
			order by InsertTime
			]]>
		</select>
		<select id="get_last" resultMap="AccountResult">
			<![CDATA[
			select top 1 *
			from dbo.Account 			
			order by InsertTime desc
			]]>
		</select>
		<select id="get_prev" resultMap="AccountResult" parameterClass="Account">
			<![CDATA[
			select top 1 *
			from dbo.Account
			where InsertTime < #InsertTime#
			order by InsertTime desc
			]]>
		</select>
		<select id="get_next" resultMap="AccountResult" parameterClass="Account">
			<![CDATA[
			select top 1 *
			from dbo.Account
			where InsertTime > #InsertTime#
			order by InsertTime
			]]>
		</select>
		<select id="has_rows_before" resultClass="bool" parameterClass="Account">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Account
				where InsertTime < #InsertTime#
				) 
				then 1 else 0 end
			]]>
		</select>
		
		<select id="has_rows_after" resultClass="bool" parameterClass="Account">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Account
				where InsertTime > #InsertTime#
				) then 1 else 0 end
			]]>
		</select>
		<!-- select by primary key -->
        <select id="select_by_primary_key" resultMap="AccountResult" parameterClass="Account">
			SELECT
				[AccountId],
				[InsertTime],
				[UpdateTime],
				[Id],
				[AccountName],
				[AccountBalance0],
				[AccountBalance1],
				[AccountDescription]
			FROM
				[dbo].[Account]
			WHERE
				[AccountId] = #AccountId#
        </select>
		
		<!-- delete -->
        <delete id="delete" parameterClass="string">
			DELETE FROM [dbo].[Account]
			WHERE
				[AccountId] = #AccountId#
        </delete>

		<!-- select all -->
        <select id="select_all" resultMap="AccountResult" >
			SELECT *
			FROM 
				[dbo].[Account]
			ORDER BY AccountId ASC
        </select>
        
		<select id="count_all" resultClass="int">
			select count(*)
			from 
				[dbo].[Account]
		</select>
		
		<select id="select_all_with_paging" resultMap="AccountResult">
            SELECT *
            FROM
            (
                SELECT *, row_number() over(order by $OrderStatement$) rownumber
                FROM    
                    [dbo].[Account]
            ) t
            WHERE t.rownumber between #Row1# and #Row2#
		</select>
		
		<!-- insert -->
        <insert id="insert" parameterClass="Account">
			INSERT INTO [dbo].[Account] 
			(
				[AccountId],
				[InsertTime],
				[Id],
				[AccountName],
				[AccountBalance0],
				[AccountBalance1],
				[AccountDescription]
			) 
			VALUES 
			(
				#AccountId#,
				#InsertTime#,
				#UpdateTime#,
				#Id#,
				#AccountName#,
				#AccountBalance0#,
				#AccountBalance1#,
				#AccountDescription#
			)
        </insert>
		
		<!-- update -->
        <update id="update" parameterClass="Account">
			UPDATE [Account] SET
				[InsertTime] = #InsertTime#,
				[UpdateTime] = #UpdateTime#,
				[Id] = #Id#,
				[AccountName] = #AccountName#,
				[AccountBalance0] = #AccountBalance0#,
				[AccountBalance1] = #AccountBalance1#,
				[AccountDescription] = #AccountDescription#
			WHERE
				[AccountId] = #AccountId#
        </update>
		<select id="existsPrimary" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from [dbo].[Account]
				where  AccountId = #value# 
				)
				then 1 else 0 end
			]]>
		</select>
		<select id="exists" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select * 
				from dbo.Account
				where Id = #value#
				) then 1 else 0 end
			]]>
		</select>
		
		<select id="get_by_id" resultMap="AccountResult" parameterClass="string">
			<![CDATA[
			SELECT top 1
				*
			FROM
				[dbo].[Account]
			WHERE
				Id = #value#
			]]>	
        </select>
		
		<select id="existsexcept" resultClass="bool" parameterClass="string">
			<![CDATA[
			select case when exists(
				select *
				from dbo.Account
				where Id = #newId# and Id <> #oldId#
				)
				then 1 else 0 end
			]]>
		</select>		
		
		
    </statements>
</sqlMap>

